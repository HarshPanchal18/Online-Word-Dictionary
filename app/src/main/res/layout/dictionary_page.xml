<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        app:cardCornerRadius="15sp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/searchedword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:text="WORD"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/phonetic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:layout_toEndOf="@id/searchedword"
                android:text="PHONETIC"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/origin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/phonetic"
                android:layout_margin="10sp"
                android:text="ORIGIN"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/licenseHead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_margin="10sp"
                android:layout_below="@id/origin"
                android:text="LICENSE"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/licenseName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/origin"
                android:layout_toEndOf="@id/licenseHead"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="10sp"
                android:layout_marginBottom="10sp"
                android:text="LICENSE NAME"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/licenseUrl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/licenseHead"
                android:layout_marginHorizontal="10sp"
                android:text="LICENSE URL"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sourceUrlHead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="10sp"
                android:layout_marginBottom="10sp"
                android:layout_below="@id/licenseUrl"
                android:text="SOURCE:"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sourceUrl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/sourceUrlHead"
                android:layout_below="@id/licenseUrl"
                android:layout_marginTop="10sp"
                android:layout_marginHorizontal="5sp"
                android:text="SOURCE URL"
                android:textSize="12sp"
                android:textStyle="bold" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
